# -------------------- Базовые настройки Django --------------------
DJANGO_SETTINGS_MODULE=portal.settings
DEBUG=False                    # Включайте True только локально
SECRET_KEY=replace_me          # openssl rand -hex 32
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com

# -------------------- База данных (PostgreSQL) --------------------
DB_ENGINE=django.db.backends.postgresql
DB_NAME=portaldb
DB_USER=portal
DB_PASSWORD=super-secret-pass
DB_HOST=127.0.0.1
DB_PORT=5432
DATABASE_URL=postgres://${DB_USER}:${DB_PASSWORD}@${DB_HOST}:${DB_PORT}/${DB_NAME}

# -------------------- Часовой пояс / язык -------------------------
TIME_ZONE=Europe/Moscow
LANGUAGE_CODE=ru-ru

# -------------------- Статика / медиа -----------------------------
STATIC_URL=/static/
MEDIA_URL=/media/
STATIC_ROOT=/opt/portal/staticfiles
MEDIA_ROOT=/opt/portal/media

# -------------------- Почта (SMTP) --------------------------------
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.yourprovider.com
EMAIL_PORT=587
EMAIL_HOST_USER=no-reply@yourdomain.com
EMAIL_HOST_PASSWORD=email-password
EMAIL_USE_TLS=True
DEFAULT_FROM_EMAIL="Portal <no-reply@yourdomain.com>"

# -------------------- Безопасность --------------------------------
CSRF_TRUSTED_ORIGINS=https://yourdomain.com
SECURE_SSL_REDIRECT=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True

# -------------------- Celery / Redis (если нужны) -----------------
REDIS_URL=redis://127.0.0.1:6379/0
CELERY_BROKER_URL=${REDIS_URL}
CELERY_RESULT_BACKEND=${REDIS_URL}

# -------------------- Логирование --------------------------------
LOG_LEVEL=INFO
